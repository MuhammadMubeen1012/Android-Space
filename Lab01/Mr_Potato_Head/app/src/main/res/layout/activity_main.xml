<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mr Potato Head"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="49dp" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="247dp"
        android:layout_height="286dp"
        android:layout_marginBottom="60dp"
        app:columnCount="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click his part to add/remove them"
            android:textAlignment="center"
            app:layout_column="0"
            app:layout_row="0" />

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:columnCount="2"
            app:layout_column="0"
            app:layout_row="1">

            <CheckBox
                android:id="@+id/hat"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="Hat"
                app:layout_column="0"
                app:layout_row="0" />

            <CheckBox
                android:id="@+id/eye"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Eyes"
                app:layout_column="1"
                app:layout_row="0" />

            <CheckBox
                android:id="@+id/eyebrows"
                android:layout_width="122dp"
                android:layout_height="wrap_content"
                android:text="Eyebrows"
                app:layout_column="0"
                app:layout_row="1" />

            <CheckBox
                android:id="@+id/nose"
                android:layout_width="122dp"
                android:layout_height="wrap_content"
                android:text="Nose"
                app:layout_column="0"
                app:layout_row="2" />

            <CheckBox
                android:id="@+id/moustache"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="Mustache"
                app:layout_column="0"
                app:layout_row="3" />

            <CheckBox
                android:id="@+id/arms"
                android:layout_width="122dp"
                android:layout_height="wrap_content"
                android:text="Arms"
                app:layout_column="0"
                app:layout_row="4" />

            <CheckBox
                android:id="@+id/glasses"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:text="Glasses"
                app:layout_column="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_row="1" />

            <CheckBox
                android:id="@+id/mouth"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Mouth"
                app:layout_column="1"
                app:layout_row="2" />

            <CheckBox
                android:id="@+id/ears"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:text="Ears"
                app:layout_column="1"
                app:layout_row="3" />

            <CheckBox
                android:id="@+id/shoes"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:text="Shoes"
                app:layout_column="1"
                app:layout_row="4" />
        </androidx.gridlayout.widget.GridLayout>

    </androidx.gridlayout.widget.GridLayout>

    <ImageView
        android:id="@+id/body_image"
        android:layout_width="191dp"
        android:layout_height="178dp"
        android:layout_marginBottom="68dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_title"
        app:layout_constraintVertical_bias="0.873"
        app:srcCompat="@drawable/body" />

    <ImageView
        android:id="@+id/arms_image"
        android:layout_width="128dp"
        android:layout_height="79dp"
        app:layout_constraintBottom_toBottomOf="@+id/body_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/body_image"
        app:srcCompat="@drawable/arms" />

    <ImageView
        android:id="@+id/ears_image"
        android:layout_width="128dp"
        android:layout_height="78dp"
        app:layout_constraintBottom_toBottomOf="@+id/body_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/body_image"
        app:layout_constraintVertical_bias="0.16"
        app:srcCompat="@drawable/ears" />

    <ImageView
        android:id="@+id/eyebrows_image"
        android:layout_width="77dp"
        android:layout_height="34dp"
        app:layout_constraintBottom_toBottomOf="@+id/body_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/body_image"
        app:layout_constraintVertical_bias="0.111"
        app:srcCompat="@drawable/eyebrows" />

    <ImageView
        android:id="@+id/eyes_image"
        android:layout_width="70dp"
        android:layout_height="34dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/body_image"
        app:srcCompat="@drawable/eyes" />

    <ImageView
        android:id="@+id/glasses_image"
        android:layout_width="83dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/body_image"
        app:srcCompat="@drawable/glasses" />

    <ImageView
        android:id="@+id/hat_image"
        android:layout_width="108dp"
        android:layout_height="48dp"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hat" />

    <ImageView
        android:id="@+id/nose_image"
        android:layout_width="53dp"
        android:layout_height="39dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/body_image"
        app:srcCompat="@drawable/nose" />

    <ImageView
        android:id="@+id/moustache_image"
        android:layout_width="73dp"
        android:layout_height="26dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/body_image"
        app:srcCompat="@drawable/moustache" />

    <ImageView
        android:id="@+id/mouth_image"
        android:layout_width="77dp"
        android:layout_height="38dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/body_image"
        app:srcCompat="@drawable/mouth" />

    <ImageView
        android:id="@+id/shoes_image"
        android:layout_width="157dp"
        android:layout_height="56dp"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/body_image"
        app:srcCompat="@drawable/shoes" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="165dp"
        android:layout_marginBottom="5dp"
        android:onClick="goToActivity"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>